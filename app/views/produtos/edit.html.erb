<h2>Editar Produto</h2>

<%= form_with model: @produto, local: true do |f| %>
  <p>
    <%= f.label :nome, "Nome" %><br>
    <%= f.text_field :nome %>
  </p>

  <p>
    <%= f.label :descricao, "Descrição" %><br>
    <%= f.text_area :descricao %>
  </p>

  <p>
    <%= f.label :quantidade, "Quantidade" %><br>
    <%= f.number_field :quantidade, min: 0 %>
  </p>

  <p>
    <%= f.label :preco, "Preço" %><br>
    <%= f.number_field :preco, step: 0.01, min: 0 %>
  </p>

  <%= f.submit "Atualizar Produto" %>
<% end %>

<p>
  <%= link_to "Voltar para produtos", produtos_path %>
</p>
